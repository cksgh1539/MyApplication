<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_y="145dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:background="@drawable/z_login_button"
    android:layout_alignParentRight="false">

    <ImageView
        android:id="@+id/Contents_Image"
        android:layout_width="149dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Contents_Name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/Contents_Price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical|center_horizontal"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>

