<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/graph"
    >
    <com.github.mikephil.charting.charts.PieChart
        android:layout_height="500sp"
        android:layout_width="match_parent"
        android:id="@+id/pieChart"
        android:foregroundGravity="bottom"
        ></com.github.mikephil.charting.charts.PieChart>
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/DB_layout"
    android:visibility="visible">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="week"
        android:layout_weight="1"
        android:text="1주일" />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="month"
        android:layout_weight="1"
        android:text="1개월" />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="Thr_month"
        android:text="3개월" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="sel_term"
        android:text="기간 선택" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/sel_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/day1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/sel_day1"
            android:layout_width="72dp"
            android:layout_height="35dp"
            android:alpha="1.0"
            android:text="달력"
            android:onClick="sel_day1" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/sel_day2"
            android:layout_width="72dp"
            android:layout_height="35dp"
            android:text="달력"
            android:onClick="sel_day2"
            android:alpha = "1.0" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="검색"
            android:onClick="search"
            android:alpha = "1.0" />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SRlayout">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listView">
    </ListView>
</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
</LinearLayout>
